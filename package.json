{
  "name": "webhook-gateway-enhanced",
  "version": "2.0.0",
  "description": "Enhanced Cloudflare Worker to capture and store webhook events from GitHub, Linear, and Slack in Supabase",
  "main": "src/worker.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --local --persist-to .wrangler/state",
    "dev:simple": "wrangler dev --local",
    "dev:remote": "wrangler dev",
    "dev:test": "npm run dev & npm run webhook:test:wait",
    "webhook:test:wait": "node -e \"setTimeout(() => {}, 5000)\" && npm run webhook:test",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "setup": "npm run setup:env",
    "setup:env": "node scripts/setup-env.js",
    "setup:db": "node scripts/setup-database.js",
    "setup:secrets": "node scripts/setup-secrets.js",
    "setup:check": "node scripts/check-setup.js",
    "setup:all": "npm run setup:env && npm run setup:db && npm run setup:secrets",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "vitest run src/**/*.test.js",
    "test:integration": "vitest run tests/integration/**/*.test.js",
    "test:watch": "vitest watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "logs": "wrangler tail",
    "logs:errors": "wrangler tail --format json | grep ERROR",
    "logs:live": "wrangler tail --format pretty",
    "metrics": "node scripts/view-metrics.js",
    "retry:failed": "node scripts/retry-failed.js",
    "archive:old": "node scripts/archive-events.js",
    "health:check": "node scripts/health-check.js",
    "webhook:test": "node scripts/test-webhook.js",
    "webhook:github": "node scripts/test-webhook.js github",
    "webhook:linear": "node scripts/test-webhook.js linear",
    "webhook:slack": "node scripts/test-webhook.js slack",
    "webhook:test:local": "cross-env TEST_WEBHOOK_ENDPOINT=http://localhost:8787 node scripts/test-webhook.js",
    "webhook:test:prod": "cross-env TEST_WEBHOOK_ENDPOINT=https://webhook-gateway.pixeliumperfecto.workers.dev node scripts/test-webhook.js",
    "db:migrate": "node scripts/migrate-database.js",
    "db:seed": "node scripts/seed-database.js",
    "db:reset": "node scripts/reset-database.js",
    "db:backup": "node scripts/backup-database.js",
    "secrets:list": "wrangler secret list",
    "secrets:delete": "node scripts/delete-secrets.js",
    "build": "node scripts/build.js",
    "clean": "rimraf .wrangler dist node_modules",
    "reinstall": "npm run clean && npm install",
    "update:wrangler": "npm install --save-dev wrangler@latest"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "itty-router": "^4.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "chalk": "^5.3.0",
    "cross-env": "^7.0.3",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "inquirer": "^9.2.12",
    "miniflare": "^3.20240129.0",
    "node-fetch": "^3.3.2",
    "ora": "^8.0.1",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "vite": "^5.0.12",
    "vitest": "^1.2.1",
    "wrangler": "^4.16.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/webhook-gateway.git"
  },
  "keywords": [
    "cloudflare-workers",
    "webhooks",
    "github",
    "linear",
    "slack",
    "supabase",
    "event-processing",
    "batch-processing",
    "rate-limiting"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/webhook-gateway/issues"
  },
  "homepage": "https://github.com/yourusername/webhook-gateway#readme"
}
