# Local PostgreSQL Webhook Gateway Configuration

# Server Configuration
PORT=3000
HOST=localhost
NODE_ENV=development
SERVER_ID=webhook-gateway-local

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=Events
DB_USER=postgres
DB_PASSWORD=password

# GitHub Configuration (Add your GitHub token)
GITHUB_TOKEN=your_github_token_here
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret_here

# Linear Configuration (Add your Linear API key)
LINEAR_API_KEY=your_linear_api_key_here
LINEAR_WEBHOOK_SECRET=your_linear_webhook_secret_here

# Slack Configuration (Add your Slack credentials)
SLACK_BOT_TOKEN=your_slack_bot_token_here
SLACK_SIGNING_SECRET=your_slack_signing_secret_here
SLACK_APP_ID=your_slack_app_id_here

# Processing Configuration
DEBUG=true
ENABLE_BATCHING=true
ENABLE_METRICS=true
ENABLE_RETRY=true
BATCH_SIZE=50
BATCH_INTERVAL=5000
MAX_RETRIES=3
RETRY_DELAY=500
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100
DATA_RETENTION_DAYS=90

